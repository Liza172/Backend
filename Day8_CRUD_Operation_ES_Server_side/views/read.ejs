<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheets" href="/stylesheets/style.css">
  <script src="https://cdn.tailwindcss.com"></script>

</head>
<body>
  <div class="w-full h-full bg-zinc-900 p-10 text-white">
    <a href="/" class="text-blue-400 mt-4 ">Back to home</a>
    <h1 class="text-3xl tracking-tighter mb-3 mt-3">All Users</h1>
   
    <div class="users flex gap-3 flex-wrap">
      <% if (users.length > 0){ %>
      <% users.forEach(function(user){ %>
      
        <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
          <div class="w-full h-52 bg-zinc-700 overflow-hidden">
            <img class="w-full h-52 object-cover" src="<%= user.image %>">
          </div>
          <h3 class="text-xl mt-3"><%= user.name %></h3>
          <h5 class="text-zinc-400 mt-2"><%= user.email %></h5>
          <div class="flex gap-5 mt-10">
            <a  class="text-zinc-200" href="/edit/<%= user._id %>">Edit User</a>
            <a  class="text-red-500" href="/delete/<%= user._id%>">Delete User</a>
          </div>
        </div>
      <% }) %>
    <% } else { %>
          <h3 class="text-zing-600">No user yet!!</h3>
      <% } %>
  

    </div>
    
  </div>
</body>
</html>